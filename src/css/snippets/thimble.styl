$scale = 0.2

.thimble
  background #fff
  width 200px
  height 350px

  > iframe
    border 0
    width (1/$scale * 100)%
    height (1/$scale * 100)%
    transform scale($scale)
    transform-origin 0 0

  .mini-menu .mini-menu-inner .identifier-button {
    background-position: 3px 2px;
    background-size: 90px;
    background-image: url('https://thimble.webmaker.org/media/img/thimble-logo.png')
  }
