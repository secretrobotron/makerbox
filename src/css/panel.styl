.exploded {
  display: none;
}

.explode-container > * {
  width: 100%;
}

.explode-button:hover {
  background-color: rgba(255,202,71, 1);
}

.explode-button {
  display: block;
  margin-top: 8px;
  width: 28px;
  height: 28px;
  border-radius: 3px;
  cursor: pointer;
  background: url( https://popcorn.webmaker.org/resources/controls/controls_icons.png) no-repeat;
  background-position: 7px -2px;
}

.x {
  position: absolute;
  top: 5px;
  right: 0;
  height: 24px;
  width: 24px;
  background: url( "https://popcorn.webmaker.org/resources/icons/glyphiconshalflings-alt.png" ) -432px -24px no-repeat;
}

.iframe-container {
  position: relative;
  width: 560px;
  height: 370px;
}

.iframe-container > iframe {
  width: 100%;
  height:100%;
  margin: 0;
}

.unit-small {
  width: 275px;
}

.unit-small img {
  width: 100%;
}

iframe {
  border: 0;
}

iframe.unit-small {
  height: 200px;
}

iframe.unit-small.portrait  {
 height: 500px;
}

.unit-large {
  width: 560px;
}

iframe.unit-large {
  height: 315px;
}

iframe.unit-large.portrait {
  height: 700px;
}