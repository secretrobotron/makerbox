.profile {
  color #fff
  width 550px
  height 320px
  background #fff
  border-radius 15px
  padding 20px
  color #000
  position relative
}

.profile .profile-pic {
  width 250px
  background #fff
  padding 4px
  float left
}

.profile h2 {
  right 20px
  text-align right
  font-size 1em
  opacity 0.8
}

.profile p {
  position absolute
  right 20px
  left 300px
  bottom 0
  top 3em
  text-overflow ellipsis
  overflow hidden
}