@import 'panel';
@import 'snippets/popcorn-maker';
@import 'snippets/flickr';
@import 'snippets/googlemap';
@import 'snippets/popcorn';
@import 'snippets/url';
@import 'snippets/text';
@import 'snippets/wikipedia';
@import 'snippets/thimble';

.wall {
  margin 0 auto
  transition: height 0.6s ease, width 0.6s ease, opacity 0.2s ease;
  width 100%
  opacity 0

  &.on {
   opacity 1
  }
}

.input-container {
  background: #DDD;
  padding: 0;
  border-bottom: 1px solid darken(#CCC, 10%);
  width: 100%;
  text-align: left;

  > ul {
    list-style: none;
    margin: 0;
    padding: 0 0 0 20px;
    li {
      padding: 20px 0;
      display: inline-block;
      &:first-child {
        padding-right: 20px;
        margin-right: 20px;
        border-right: 1px solid darken(#CCC, 5%);
      }
    }
  }

  input {
    width: 400px;
    padding: 12px;
    border: 1px solid darken(#CCC,10%);
    box-shadow: 0 2px 5px -3px rgba(0,0,0,15%);
    &:focus {
      outline: none;
      border: 1px solid green;
      box-shadow: 0 2px 5px -3px rgba(0,0,0,20%);
    }
  }

  margin-bottom: 20px;
}
