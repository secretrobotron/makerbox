!!! 5
html

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title makebox
    link(rel='stylesheet', href='css/style.css')
    link(rel='stylesheet', href='css/webmakernav.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Merriweather:400,700,300')
    link(rel='stylesheet', href='//www.mozilla.org/tabzilla/media/css/tabzilla.css')
    script(src='lib/require.js', data-main='src/main')
    script(src='lib/webmakernav.js')
    script(src='http://vanilla-masonry.desandro.com/masonry.min.js')
    script(src='http://popcornjs.org/code/dist/popcorn-complete.min.js')
    script(src='http://stevenlevithan.com/demo/parseuri/js/assets/parseuri.js')

  body
    nav(id='webmaker-nav')
        a(href='http://www.mozilla.org/', id='tabzilla')
            mozilla

    header(class='input-container')
        ul
            li
                input(type='text', placeholder='Add some text or a url here...')
            li
                button(class='thimble-remix-button btn-blue') Remix in Thimble
            li
                button(class='popcorn-remix-button') Remix in Popcorn Maker

    div(class='wall')
        for entry in htmlEntries
            div(class='panel') !{entry}

    div(class='url-entries')
        form
            for entry in urlEntries
                input(type='hidden', value=entry)

    script(src='//www.mozilla.org/media/js/libs/jquery-1.7.1.min.js')
    script(src='//www.mozilla.org/tabzilla/media/js/tabzilla.js')
